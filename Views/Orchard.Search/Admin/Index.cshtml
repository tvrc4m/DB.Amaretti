@{
    var pageTitle = T("Search Content");
    Layout.Title = pageTitle;
}
<label for="search-text">@T("Search")</label>
@using (Html.BeginFormAntiForgeryPost(Url.Action("index", new { controller = "admin", area = "Orchard.Search", @class = "form-group form-inline" }), FormMethod.Get))
{  
   
    <div class="input-group">        
        <input id="searchText" name="searchText" class="input text s7-search" value="" type="text">
    </div>

    <fieldset class="contentItems bulk-items">
        @Display(Model.ContentItems)
    </fieldset>
        
    if (HasText(Model.SearchText) && Model.ContentItems.Items.Count == 0) {
         @T("There are no results")
    }

    @Display(Model.Pager)
}